<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.metoo.nspm.core.mapper.nspm.DomainMapper">

    <resultMap id="Base_Result_Map" type="com.metoo.nspm.entity.nspm.Domain">
        <id column="id" property="id"></id>
        <result column="addTime" property="addTime"></result>
        <result column="deleteStatus" property="deleteStatus"></result>
        <result column="name" property="name"></result>
        <result column="number" property="number"></result>
        <result column="description" property="description"></result>
        <result column="editDate" property="editDate"></result>
        <result column="group_id" property="groupId"></result>
    </resultMap>

    <resultMap id="Domain_Vlan_Result_Map" type="com.metoo.nspm.entity.nspm.Domain">
        <id column="id" property="id"></id>
        <result column="addTime" property="addTime"></result>
        <result column="deleteStatus" property="deleteStatus"></result>
        <result column="name" property="name"></result>
        <result column="number" property="number"></result>
        <result column="description" property="description"></result>
        <result column="editDate" property="editDate"></result>
        <result column="group_id" property="groupId"></result>
        <collection property="vlans" javaType="list" ofType="com.metoo.nspm.entity.nspm.Vlan">
            <id column="vlan_id" property="id"></id>
            <result column="vlan_name" property="name"></result>
        </collection>

    </resultMap>

    <sql id="Base_Column_List">
        id, addTime, deleteStatus, name, description, editDate, group_id
    </sql>

    <sql id="Domain_Vlan_Column_List">
        `domain`.*,
	    vlan.id vlan_id, vlan.name vlan_name
    </sql>

    <select id="selectObjById" parameterType="java.lang.Long" resultType="com.metoo.nspm.entity.nspm.Domain">
        SELECT * FROM metoo_domain
        where id = #{id}
    </select>

    <select id="selectObjByConditionQuery" parameterType="com.metoo.nspm.dto.DomainDTO" resultMap="Base_Result_Map">
        SELECT *
        FROM metoo_domain
        <where>
            <if test="groupId != null and groupId != ''">
                AND group_id = #{groupId}
            </if>
        </where>
    </select>

    <select id="selectObjByMap" parameterType="java.util.Map" resultMap="Base_Result_Map">
        SELECT *
        FROM metoo_domain
        <where>
            <if test="id != null and id != ''">
                AND `id` = #{id}
            </if>
            <if test="name != null and name != ''">
                AND `name` = #{name}
            </if>
            <if test="groupId != null and groupId != ''">
                AND group_id = #{groupId}
            </if>
            <if test="groupIds != null and groupIds != ''">
                AND group_id in
                <foreach collection="groupIds" index = "index" item="item" separator="," open="(" close=")">
                    #{item}
                </foreach>
            </if>
            <if test="domainId != null and domainId != ''">
                AND `id` != #{domainId}
            </if>
        </where>
    </select>

    <select id="selectDomainAndVlanByMap" parameterType="java.util.Map" resultMap="Domain_Vlan_Result_Map">
        SELECT *
        FROM domain_vlan
        <where>
            <if test="id != null and id != ''">
                AND `id` = #{id}
            </if>
            <if test="name != null and name != ''">
                AND `name` = #{name}
            </if>
            <if test="groupId != null and groupId != ''">
                AND group_id = #{groupId}
            </if>
            <if test="groupIds != null and groupIds != ''">
                AND group_id in
                <foreach collection="groupIds" index = "index" item="item" separator="," open="(" close=")">
                    #{item}
                </foreach>
            </if>
            <if test="domainId != null and domainId != ''">
                AND `id` != #{domainId}
            </if>
        </where>
    </select>

    <select id="selectDomainAndVlanProceDureByMap" parameterType="java.util.Map" statementType="CALLABLE" resultMap="Domain_Vlan_Result_Map">
        	{call domain_vlan()}
    </select>

    <insert id="save" parameterType="com.metoo.nspm.entity.nspm.Domain" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO metoo_domain
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="addTime != null">
                addTime,
            </if>
            <if test="deleteStatus != null">
                deleteStatus,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="number != null">
                number,
            </if>
            <if test="description != null and description != ''">
                description,
            </if>
            <if test="editDate != null">
                editDate,
            </if>
            <if test="groupId != null">
                group_id,
            </if>
        </trim>
        <trim prefix="VALUES(" suffix=")" suffixOverrides=",">
            <if test="addTime != null">
                #{addTime},
            </if>
            <if test="deleteStatus != null">
                #{deleteStatus},
            </if>
            <if test="name != null and name != ''">
                #{name},
            </if>
            <if test="number != null">
                #{number},
            </if>
            <if test="description != null and description != ''">
                #{description},
            </if>
            <if test="editDate != null">
                #{editDate},
            </if>
            <if test="groupId != null">
                #{groupId},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.metoo.nspm.entity.nspm.Domain">
        UPDATE metoo_domain
        <set>
            <if test="addTime != null">
                addTime = #{addTime},
            </if>
            <if test="deleteStatus != null">
                deleteStatus = #{deleteStatus},
            </if>
            <if test="name != null and name != ''">
                `name` = #{name},
            </if>
            <if test="number != null">
                `number` = #{number},
            </if>
            <if test="description != null and description != ''">
                description = #{description},
            </if>
            <if test="editDate != null">
                editDate = #{editDate},
            </if>
            <if test="groupId != null">
                group_id = #{groupId},
            </if>
        </set>
        where id = #{id}
    </update>


    <delete id="delete" parameterType="java.lang.Long">
        DELETE FROM metoo_domain where id = #{id}
    </delete>
</mapper>